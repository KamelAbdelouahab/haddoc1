
actor relu
 in (a:int<s,m> dc)
 out(c:int<s,m> dc)
rules
|a:'< -> c:'<
|a:'> -> c:'>
|a:'x -> c:if x > 0 then 'x else '0;

actor biais(b:signed<32>)
 in (a:int<s,m> dc)
 out(c:int<s,m> dc)
rules
|a:'< -> c:'<
|a:'> -> c:'>
|a:'x -> c:'(x+b);

-- ReLU + biais
actor relu_opt(b:signed<32>)
 in (a:int<s,m> dc)
 out(c:int<s,m> dc)
rules
|a:'< -> c:'<
|a:'> -> c:'>
|a:'x -> c:if (x+b) > 0 then '(x+b) else '0;
